<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid 
                android:color="#0e5878" />
            
            <corners 
                android:radius="6dp" />
        </shape>        
    </item>
    
    <item>
        <shape>
            <gradient 
                android:angle="270" 
                android:endColor="#33FFFFFF" 
                android:startColor="#33999999" />

            <corners 
                android:radius="6dp" />
        </shape>    
    </item>
</selector>