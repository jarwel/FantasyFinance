<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <SearchView
        android:id="@+id/svPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

    </SearchView>

    <ListView
        android:id="@+id/lvPools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnJoinPool"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/svPool" >

    </ListView>

    <Button
        android:id="@+id/btnJoinPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onCreatePoolClicked"
        android:text="@string/create_pool_label" />

</RelativeLayout>
