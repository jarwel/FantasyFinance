<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvLotSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Symbol"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvLotShares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLotSymbol"
        android:layout_alignBottom="@+id/tvLotSymbol"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvLotSymbol"
        android:text="200"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvLotPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLotShares"
        android:layout_alignBottom="@+id/tvLotShares"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvLotShares"
        android:text="+100.00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvLotValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLotShares"
        android:layout_alignBottom="@+id/tvLotShares"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvLotPrice"
        android:text="$10,000.00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>